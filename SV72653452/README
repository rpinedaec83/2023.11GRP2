drop database hackaton16;
create database hackaton16;
use hackaton16;
-- Crear tabla para almacenar la información de usuario
CREATE TABLE usuarios (
    id VARCHAR(255) NOT NULL,
    nombre VARCHAR(255),
    apellido VARCHAR(255),
    correo VARCHAR(255),
    PRIMARY KEY (id)
);

-- Crear tabla para almacenar la información de compra
CREATE TABLE OrdenDeCompra (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre_curso VARCHAR(255),
    precio DECIMAL(10, 2)

);